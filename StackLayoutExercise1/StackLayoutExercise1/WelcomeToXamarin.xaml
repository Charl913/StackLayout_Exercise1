<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise1.WelcomeToXamarin"
             BackgroundColor="#127ac7">
    
    <StackLayout VerticalOptions="Center">
        
        <Label Text="Welcomne to Xamarin"
               HorizontalOptions="Center"
               TextColor="White"
               FontSize="30"
               FontAttributes="Bold"/>
        
        <Label Text="Cross-platform apps made easy"
               HorizontalOptions="Center"
               TextColor="White"
               FontSize="18"/>
        
        <Button HorizontalOptions="Fill"
                BackgroundColor="#1dabf0"
                Text="Login"
                TextColor="Wheat"/>
        
        <Button HorizontalOptions="Fill"
                BackgroundColor="#1dabf0"
                Text="Register"
                Margin="0,20,0,0"
                TextColor="Wheat"/>
        
    </StackLayout>
    
</ContentPage>